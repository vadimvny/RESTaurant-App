<%if @errors%>
<div class ="errors">
	<h1><% @errors.count %> <%= @errors.count == 1 ? "ERROR" : "ERRORS" %> </h1>
	<ul>
		<% @errors.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
</div>
<%end%>
